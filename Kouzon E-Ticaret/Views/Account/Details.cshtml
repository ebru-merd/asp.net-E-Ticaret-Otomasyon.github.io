
@model Kouzon_E_Ticaret.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="row">
        <div class="text-white col-md-12">
            <h2 class="text-green mt-3">Sipariş Detay Bilgileri</h2>
            <hr class="bg-white" />

            <dl class="row text-white">
                <dt class="col-sm-3">Sipariş Durumu</dt>
                <dd class="col-sm-9">
                    @if (Model.OrderState == Kouzon_E_Ticaret.Entity.EnumOrderState.Waiting)
                    {
                        <span class="badge-danger">Onay Bekliyor</span>
                    }
                    else if (Model.OrderState == Kouzon_E_Ticaret.Entity.EnumOrderState.Completed)
                    {
                        <span class="badge-success">Sipariş Tamamlandı</span>
                    }
                </dd>

                <dt class="col-sm-3">Sipariş Id</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Sipariş Numarası</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>

                <dt class="col-sm-3">Sipariş Tutarı</dt>
                <dd class="col-sm-9">
                    <i class="fa fa-try" aria-hidden="true"></i>
                    @Model.Total
                </dd>

                <dt class="col-sm-3">Sipariş Tarihi</dt>
                <dd class="col-sm-9"> @Model.OrderDate</dd>

                <dt class="col-sm-3">Adres</dt>

                <dd class="col-sm-9">
                    @Model.AdresBasligi
                    <hr class="bg-white" />
                    @Model.Adres
                    <br />
                    @Model.Sehir - @Model.Semt - @Model.Mahalle
                    <br />
                    @Model.PostaKodu
                </dd>

                <dt class="col-sm-3 text-green">Ürünler</dt>
                <dd class="col-sm-9">
                    <table class="table table-bordered text-white">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Ürün İsmi</th>
                                <th>Miktar</th>
                                <th>Fiyat</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderLines)
                            {
                                <tr>
                                    <td>
                                        <img src="~/Upload/@item.Image" width="70" />
                                    </td>
                                    <td>
                                        @item.ProductName
                                    </td>
                                    <td>
                                        @item.Quantity
                                    </td>
                                    <td>
                                        <i class="fa fa-try" aria-hidden="true"></i>
                                        @item.Price
                                    </td>
                                    <td>
                                        <a href="/Home/Urun/@item.ProductId" class="btn btn-success btn-sm" target="_blank">
                                            Ürün Detayları
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </dd>


            </dl>
        </div>
    </div>
</div>

