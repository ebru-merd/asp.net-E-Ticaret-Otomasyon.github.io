@using Kouzon_E_Ticaret.Entity;
@model Product
@{
    ViewBag.Title = "Urun";
}

<div class="container my-5 p-5">
    <div class="row">
        <div class="col-md-4">
            <img width="100%" src="~/Upload/@Model.Image" alt="" srcset="">
            <div class="container">
                @if (Model.IsApproved)
                {
                    <h6 class="text-white float-left mt-3"><strong>Gönderim: </strong> Ürün Stokta var.</h6>
                }
                else
                {
                    <h6 class="text-white float-left mt-3"><strong class="text-danger">Gönderim: </strong> Ürün Stokta Yok.</h6>
                }
                <p class="text-white float-left">Ücretsiz Gönderim <i class="fa-solid fa-check"></i></p>
            </div>
        </div>
        <div class="col-md-8">
            <div class="container">
                <div class="row">
                    <div class="col-md-12"><h2 class="text-white float-left mt-3">@Model.Name</h2></div>
                    <div class="col-md-12">
                        <h3 class="text-white float-left mt-1">@Model.Price TL</h3>
                    </div>
                    <div class="col-md-12">
                        <p class="text-white float-left mt-3">@Model.Description</p>
                    </div>
                    <div class="col-md-12 mt-5">

                        @using (Html.BeginForm("AddToCart","Cart"))
                        {
                            @Html.HiddenFor(i=>i.Id)
                            <button class="btn btn-success bg-green w-100" type="submit">
                            Sepete Ekle
                            </button>
                        }




                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

